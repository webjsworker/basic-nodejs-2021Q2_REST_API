{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,

    "source": {
        "include": ["src"],
        "includePattern": ".js$",
        "excludePattern": "(^|\\/|\\\\)_"
    },

    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "template": "custom-template"
    }
    
}